<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/box_shadow"
    android:baselineAligned="false">

    <!-- Section pour le nom et le nombre d'appareils -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <!-- Nom de l'habitant -->
        <TextView
            android:id="@+id/nomResident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Nom de l'habitant"/>

        <!-- Nombre d'appareils -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nbEquipements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="6dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:text="Nombre d'appareils" />

            <!-- Affichage des icônes des équipements -->
            <ImageView
                android:id="@+id/icone1"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/icone2"
                android:paddingRight="5dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icone3"
                android:paddingRight="5dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icone4"
                android:paddingRight="5dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Section pour l'étage -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_background"
            android:layout_marginTop="4dp"
            android:paddingVertical="2dp"
            android:paddingStart="6dp"
            android:paddingEnd="4dp">

            <!-- Libellé "étage" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Étage"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <!-- Affichage de l'étage -->
            <TextView
                android:id="@+id/etage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                android:textColor="@android:color/white"
                android:background="@drawable/border_green_background"
                android:text="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
